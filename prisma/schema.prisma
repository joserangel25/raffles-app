generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @unique @default(uuid())
  name               String
  email              String        @unique
  password           String?
  discordId          String        @default("")
  myRaffles          Raffle[]
  participateRaffles Participant[]
}

model Raffle {
  id              String    @id @unique @default(uuid())
  title           String
  description     String
  maxParticipants Int?
  endDate         DateTime?
  image           String?
  played          Boolean   @default(false)

  // Relaciones
  author       User          @relation(fields: [authorId], references: [id])
  authorId     String
  participants Participant[]
}

model Participant {
  id       User   @relation(fields: [userId], references: [id])
  userId   String @unique
  raffle   Raffle @relation(fields: [raffleId], references: [id])
  raffleId String
}
